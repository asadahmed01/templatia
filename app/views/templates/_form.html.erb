<%= form_with(model: template, local: true, html: { multipart: true }) do |form| %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :template_file %>
    <%= form.file_field :template_file, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :thumbnails, "Thumbnails (multiple)" %>
    <%= form.file_field :thumbnails, multiple: true, class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
<% end %>
