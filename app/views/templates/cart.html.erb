<!-- app/views/templates/view_cart.html.erb -->

<section class="h-100">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
        </div>

        <% if @cart_items.empty? %>
          <p class="d-flex justify-content-center align-items-center">Your cart is empty.</p>
        <% else %>
          <% @cart_items.each do |item| %>
            <div class="card rounded-3 mb-4 shadow">
              <div class="card-body p-4">
                <div class="row d-flex justify-content-between align-items-center">
                  <div class="col-md-2 col-lg-2 col-xl-2">
                    <%= image_tag item.thumbnails.first, class: 'img-fluid rounded-3', alt: item.name %>
                  </div>
                  <div class="col-md-4 col-lg-4 col-xl-3">
                    <p class="lead fw-normal mb-2"><%= link_to item.name, template_path(item) %></p>
                    <p><span class="text-muted">Size: </span>M <span class="text-muted">Color: </span>Grey</p>
                  </div>
                  <div class="col-md-2 col-lg-2 col-xl-2">
                    <h5 class="mb-0"><%= number_to_currency(item.price, unit: "CA$") %></h5>
                  </div>
                  <div class="col-md-2 col-lg-2 col-xl-2 text-end">
                    <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</section>
