  <div class="position-absolute bottom-0 end-0 w-25 m-2">
    <% flash.each do |type, msg| %>
      <div class="d-flex justify-content-between alert alert-dismissibl <%= type == 'notice' ? 'alert-success' : type == 'alert' ? 'alert-danger' : '' %>" role="alert">
        <strong><%= msg %>!</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  </div>
